rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'mistarcodm@gmail.com';
    }
    
    // 프로필 사진
    match /profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 과제 제출물
    match /assignments/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 강의 자료 (관리자만 업로드)
    match /courses/{courseId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // 커리큘럼 이미지 (관리자만 업로드, 모두 읽기 가능)
    match /curriculum/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 공지사항 이미지 (관리자만 업로드, 모두 읽기 가능)
    match /notices/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
